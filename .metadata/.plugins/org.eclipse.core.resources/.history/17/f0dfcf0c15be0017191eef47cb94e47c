
public class Solution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] A= {-1,1,3,3,3,2,1,0};
		
		int start=-1; 
		int end=-1;
		int chai = -100;
		int index=0;
		for(int i=0; i<A.length; i++) {
			if(chai == -100) {
				chai = A[i] * -1 + A[i+1];
			}
			if(start == -1) {
				start = i;
			}
			if(start != -1 && end == -1) {
				end = i;
			}
			
			if(A[i-1] + A[i]== chai) {
				end = i;
			}else {
				System.out.printf("(%d, %d")",start,end);
			}
			
		}
	}

}
